{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "sys_info": {
      "type": "object",
      "properties": {
        "cpu_usage": { "type": "number" },
        "memory_usage": { "type": "number" },
        "username": { "type": "string" },
        "hostname": { "type": "string" },
        "os": { "type": "string" },
        "wm": { "type": "string" },
        "uptime": { "type": "integer" },
        "packages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "package_manager": { "type": "string" },
              "packages_number": { "type": "integer" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "audio": {
      "type": "object",
      "properties": {
        "mpris": {
          "type": "object",
          "properties": {
            "shuffle": { "type": "boolean" },
            "title": { "type": "string" },
            "artist": { "type": "string" },
            "progress_percent": { "type": "number" }
          },
          "additionalProperties": false
        },
        "cava": {
          "type": "object",
          "properties": {
            "bars": {
              "type": "array",
              "items": { "type": "integer" }
            }
          },
          "additionalProperties": false
        },
        "devices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "volume": { "type": "integer" },
              "muted": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
